
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and update their own profiles
    match /users/{userId} {
      allow read: if request.auth.uid == userId || (request.auth.token.role == 'admin' && exists(/databases/$(database)/documents/users/$(request.auth.uid)));
      allow update: if request.auth.uid == userId || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      // Anyone can create a user document (as part of signup)
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Products are publically readable, but only admins can write them
    match /products/{productId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Orders can be created by any authenticated user for themselves
    // and read by the user who owns it or an admin.
    match /orders/{orderId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
