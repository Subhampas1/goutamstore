
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Products can be read by anyone, but only modified by admins.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users can only view their own document, but admins can view any.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId || isAdmin();
    }
    
    // Users can create orders for themselves. Admins can manage all orders.
    match /orders/{orderId} {
       allow read, write: if request.auth.uid == request.resource.data.userId || isAdmin();
       allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}
